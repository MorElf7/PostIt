<% layout('layouts/boilerplate') %> 
<div class="container">
    <div class="row mt-3">
        <div class="col-md-6 offset-2">
            <div class="card bg-light text-dark mb-3">
                <div class="card-title mt-3 mb-3 mx-5">
                    <h3> <%= community.name %> </h3>
                </div>
                
                <% if (community.logo.url) { %>
                    <div class="mb-3">
                        <img src="<%= community.logo.url %> " class="card-img px-5" alt="">
                    </div>
                <% } %>
                
                <div class="card-subtitle mb-3 mx-5">
                    <h5>Description</h5>
                    <% if (community.description) { %>
                        <div> <%= community.description %> </div>
                    <% } %>
                </div>
                <div class="card-link mb-3 mx-5"> 
                    <% if (currentUser && currentUser._id.equals(community.admin._id)) { %>
                        <a href="/communities/<%= community._id %>/settings"><button class="btn btn-info">Community Settings</button></a>
                        <a href="/communities/<%= community._id %>/posts/new"><button type="button" class="btn btn-primary">New Post</button></a>
                    <% } %>
                    <a href="/users"><button type="button" class="btn btn-secondary">Back</button></a>
                    
                </div>
