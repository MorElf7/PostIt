<% layout('layouts/boilerplate') %> 
<div class="container">
    <div class="row mt-3">
        <div class="col-md-6 offset-2">
            <div class="card bg-white border-white text-dark mb-3">
                <div class="card-title mt-3 mb-3 mx-5">
                    <div class="row">
                        <div class="col-9">
                            <h3> <%= user.username %> </h3>
                        </div>
                        <div class="col-auto justify-content-end">
                            <% if (!currentUser.follows.includes(user._id)) { %>
                                <form action="/<%= currentUser._id %>?_method=PATCH" method="POST">
                                    <input type="text" name="follow" id="" value="<%= user._id %>"  hidden>
                                    <button class="btn btn-outline-primary" type="submit">Follow</button>
                                </form>
                            <% } else {%>
                                <form action="/<%= currentUser._id %>?_method=PATCH" method="POST">
                                    <input type="text" name="unfollow" id="" value="<%= user._id %>"  hidden>
                                    <button class="btn btn-outline-secondary" type="submit">Unfollow</button>
                                </form>
                            <% } %> 
                        </div>
                    </div>
                </div>
                
                <% if (user.avatar.url) { %>
                    <div class="mb-3">
                        <img src="<%= user.avatar.url %> " class="card-img px-5" alt="">
                    </div>
                <% } %>
                
                <div class="card-subtitle mb-3 mx-5">
                    <h5>Bio</h5>
                    <% if (user.bio) { %>
                        <div> <%= user.bio %> </div>
                    <% } %>
                </div>
                <div class="card-link mb-3 mx-5"> 
                    <% if (currentUser && user._id.equals(currentUser._id)) { %>
                        <a href="/<%= user._id %>/settings"><button class="btn btn-primary">Account Settings</button></a>
                        <a href="/<%= user._id %>/posts/new"><button type="button" class="btn btn-success">New Post</button></a>
                    <% } %>
                    <a href="#"><button type="button" class="btn btn-secondary" onclick="history.back()">Back</button></a>
                    
                </div>
                <div class="mb-3 mx-5">
                    <h5>Posts</h5>
                    <ul class="list-group list-group-flush">
                        <% if (user.posts.length) { %>
                            <% for( let post of user.posts) { %>
                                <div>
                                    <a href="/<%= user._id %>/posts/<%= post._id %>" class="list-group-item list-group-item-action"><%= post.title %></a>
                                </div>
                            <% } %>
                        <% } else {%>
                            <div class="mb-2">No post so far</div>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
</div>
