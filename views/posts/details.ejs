<% layout('layouts/boilerplate') %> 
<div class="container d-flex flex-column">
    <div class="mt-3 mb-3">
        <h1><%= post.title %> </h1>
    </div>
    <div class="mb-3">
        <% if (post.image) { %>
                <img class="img-fluid" src="<%= post.image %>" width="500" height="100" alt="">
        <% } %>
        <h4><%= post.user.username %></h4>
        <p><%= post.createdAt.toLocaleString() %></p>
    </div>

    <div class="mb-3">
        <p class="lead"><%= post.description %> </p>
    </div>
    
    <div class="mb-3">
        <form action="/<%= userId %>/posts/<%= post._id %>?_method=DELETE" method="POST">
            <a href="/<%= userId %>/posts/<%= post._id %>/edit"><button type="button" class="btn btn-primary mb-3">Edit</button></a>
            <button type="submit" class="btn btn-primary mb-3">Delete</button>
            <a href="/<%= userId %>"><button type="button" class="btn btn-secondary mb-3">Back</button></button></a>
        </form>
    </div>
</div>
