<% layout('layouts/boilerplate') %> 
<div class="container">
    <div class="row mt-3">
        <div class="col-md-6 offset-2">
            <div class="card bg-light text-dark">
                <div class="card-title mt-3 mb-3 mx-5">
                    <h3><%= post.title %> </h3>
                </div>
                <div class="card-subtitle mb-3 text-muted mx-5">
                    <div><%= post.user.username %></div>
                    <div><%= post.createdAt.toLocaleString() %></div>
                </div>
        
                <div class="mx-2">
                    <% if (post.image) { %>
                        <img class="card-img" src="<%= post.image %>" width="500" height="100" alt="">
                    <% } %>
                </div>
        
                <div class="card-body mb-3 mx-5">
                    <div class="card-text mb-3">
                        <%= post.description %>
                    </div>
                </div>
                
                <div class="class-footer mb-3 mx-5">
                    <form class="card-link" action="/<%= post.user._id %>/posts/<%= post._id %>?_method=DELETE" method="POST">
                        <% if (currentUser && post.user.equals(currentUser._id)) { %>
                            <a href="/<%= post.user._id %>/posts/<%= post._id %>/edit"><button type="button" class="btn btn-primary mb-3">Edit</button></a>
                            <button type="submit" class="btn btn-primary mb-3">Delete</button>
                        <% } %>
                        <a href="/<%= post.user._id %>"><button type="button" class="btn btn-secondary mb-3">Back</button></button></a>
                    </form>
                </div>
                
            </div>
        </div>
    </div>
    
    
</div>
