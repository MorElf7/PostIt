<% layout('layouts/boilerplate') %> 
<div class="container">
    <div class="row mt-3">
        <div class="col-md-6 offset-2">
            <div class="">
                <h3 class="mb-3">Community Settings</h3>
            </div>
            
            <div>
                <form action="/communities/<%= community._id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input class="form-control" type="text" id="name" name="community[name]" value="<%= community.name %>" required>
                        <div class="invalid-feedback">
                            Please provide a name.
                        </div>
                    </div>                    
                    <div class="mb-3">
                        <label for="logo" class="form-label">Logo</label>
                        <input class="form-control" type="file" id="avatar" name="community[logo]">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" name="community[description]" id="description"rows="5"><%= community.description %></textarea>
                    </div>
                    <div class="mb-3">
                        
                    </div>
                    <div>
                        <button type="submit" class="btn btn-success">Edit</button>
                        <a href="/communities"><button type="button" class="btn btn-secondary">Cancel</button></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
