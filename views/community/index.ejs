<% layout('layouts/boilerplate') %> 
<div class="container">
    <div class="row mt-3">
        <div class="col-md-6 offset-2">
            <div class="mb-3 offset-5">
                <h1>All Communities</h1>
            </div>
            <div class="">
                <ul>
                <% for (let community of communities) {%>
                    <div class="card border-white mb-3 w-100">
                        <a class="btn border-info btn-light" href="/communities/<%= community.id %>">
                            <div class="card-body">
                                <h4 class="card-title"><%= community.name %></h4>
                                <div class="card-text"><%= community.description %></div>
                            </div>
                        </a>    
                    </div>
                <%}%>  
                </ul>
            </div>
        </div>
    </div>
</div>