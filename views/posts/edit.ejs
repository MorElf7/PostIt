<% layout('layouts/boilerplate') %> 
<div class="container">
    <h3 class="mt-3 mb-3">Edit Post</h3>
    <form action="/<%= userId %>/posts/<%= post._id %>?_method=PUT" method="POST">
        <div class="mb-3"
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" name="post[title]" value="<%= post.title %>" class="form-control">
        </div>
        <div class="mb-3">
            <label for="imageURL" class="form-label">ImageURL</label>
            <input class="form-control" name="post[image]" id="imageURL" type="text" value="<%= post.image %>"></input>
        </div>
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="post[description]" id="description" class="form-control" rows="10"><%= post.description %> </textarea>
        </div>
        <br>
        <div>
            <button type="submit" class="btn btn-primary">Edit</button>
            <a href="/<%= userId %>/posts/<%= post._id %>"><button type="button" class="btn btn-secondary">Cancel</button></a>
        </div>
    </form>
</div>
